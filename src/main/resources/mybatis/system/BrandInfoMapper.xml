<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.system.mapper.BrandInfoMapper">
    
    <resultMap type="BrandInfo" id="BrandInfoResult">
        <result property="brandId"    column="brand_id"    />
        <result property="brandName"    column="brand_name"    />
        <result property="brandDes"    column="brand_des"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectBrandInfoVo">
        select brand_id, brand_name, brand_des, status, create_by, create_time, update_by, update_time, remark from brand_info
    </sql>

    <select id="selectBrandInfoList" parameterType="BrandInfo" resultMap="BrandInfoResult">
        <include refid="selectBrandInfoVo"/>
        <where>  
            <if test="brandName != null  and brandName != ''"> and brand_name like concat('%', #{brandName}, '%')</if>
            <if test="brandDes != null  and brandDes != ''"> and brand_des = #{brandDes}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBrandInfoByBrandId" parameterType="Long" resultMap="BrandInfoResult">
        <include refid="selectBrandInfoVo"/>
        where brand_id = #{brandId}
    </select>
        
    <insert id="insertBrandInfo" parameterType="BrandInfo" useGeneratedKeys="true" keyProperty="brandId">
        insert into brand_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="brandName != null and brandName != ''">brand_name,</if>
            <if test="brandDes != null">brand_des,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="brandName != null and brandName != ''">#{brandName},</if>
            <if test="brandDes != null">#{brandDes},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateBrandInfo" parameterType="BrandInfo">
        update brand_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="brandName != null and brandName != ''">brand_name = #{brandName},</if>
            <if test="brandDes != null">brand_des = #{brandDes},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where brand_id = #{brandId}
    </update>

    <delete id="deleteBrandInfoByBrandId" parameterType="Long">
        delete from brand_info where brand_id = #{brandId}
    </delete>

    <delete id="deleteBrandInfoByBrandIds" parameterType="String">
        delete from brand_info where brand_id in 
        <foreach item="brandId" collection="array" open="(" separator="," close=")">
            #{brandId}
        </foreach>
    </delete>
</mapper>