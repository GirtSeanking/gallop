<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.system.mapper.SysUserAuditMapper">

    <resultMap type="SysUserAudit" id="SysUserAuditResult">
        <result property="userAuditId"    column="user_audit_id"    />
        <result property="userId"    column="user_id"    />
        <result property="userIdCard"    column="user_id_card"    />
        <result property="userAuditName"    column="user_audit_name"    />
        <result property="idCardImgs"    column="id_card_imgs"    />
        <result property="rejectReason"    column="reject_reason"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <association property="user" javaType="SysUser" resultMap="SysUserResult" />
    </resultMap>

    <resultMap type="SysUser" id="SysUserResult">
        <id     property="userId"       column="user_id"      />
        <result property="deptId"       column="dept_id"      />
        <result property="userName"     column="user_name"    />
        <result property="nickName"     column="nick_name"    />
        <result property="email"        column="email"        />
        <result property="phonenumber"  column="phonenumber"  />
        <result property="sex"          column="sex"          />
        <result property="avatar"       column="avatar"       />
        <result property="password"     column="password"     />
        <result property="status"       column="status"       />
        <result property="delFlag"      column="del_flag"     />
        <result property="loginIp"      column="login_ip"     />
        <result property="loginDate"    column="login_date"   />
        <result property="createBy"     column="create_by"    />
        <result property="createTime"   column="create_time"  />
        <result property="updateBy"     column="update_by"    />
        <result property="updateTime"   column="update_time"  />
        <result property="remark"       column="remark"       />
    </resultMap>

    <sql id="selectSysUserAuditVo">
        select sua.user_audit_id, sua.user_id, sua.user_id_card, sua.user_audit_name, sua.id_card_imgs, sua.reject_reason, sua.status, sua.create_by, sua.create_time, sua.update_by, sua.update_time, sua.remark, su.user_name, su.nick_name from sys_user_audit sua
        left join sys_user su on sua.user_id = su.user_id
    </sql>

    <select id="selectSysUserAuditList" parameterType="SysUserAudit" resultMap="SysUserAuditResult">
        <include refid="selectSysUserAuditVo"/>
        <where>
            <if test="userAuditName != null  and userAuditName != ''"> and user_audit_name like concat('%', #{userAuditName}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="selectSysUserAuditByUserAuditId" parameterType="Long" resultMap="SysUserAuditResult">
        <include refid="selectSysUserAuditVo"/>
        where user_audit_id = #{userAuditId}
    </select>

    <insert id="insertSysUserAudit" parameterType="SysUserAudit">
        insert into sys_user_audit
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userAuditId != null">user_audit_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="userIdCard != null">user_id_card,</if>
            <if test="userAuditName != null">user_audit_name,</if>
            <if test="idCardImgs != null">id_card_imgs,</if>
            <if test="rejectReason != null">reject_reason,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userAuditId != null">#{userAuditId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="userIdCard != null">#{userIdCard},</if>
            <if test="userAuditName != null">#{userAuditName},</if>
            <if test="idCardImgs != null">#{idCardImgs},</if>
            <if test="rejectReason != null">#{rejectReason},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSysUserAudit" parameterType="SysUserAudit">
        update sys_user_audit
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="userIdCard != null">user_id_card = #{userIdCard},</if>
            <if test="userAuditName != null">user_audit_name = #{userAuditName},</if>
            <if test="idCardImgs != null">id_card_imgs = #{idCardImgs},</if>
            <if test="rejectReason != null">reject_reason = #{rejectReason},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where user_audit_id = #{userAuditId}
    </update>

    <delete id="deleteSysUserAuditByUserAuditId" parameterType="Long">
        delete from sys_user_audit where user_audit_id = #{userAuditId}
    </delete>

    <delete id="deleteSysUserAuditByUserAuditIds" parameterType="String">
        delete from sys_user_audit where user_audit_id in
        <foreach item="userAuditId" collection="array" open="(" separator="," close=")">
            #{userAuditId}
        </foreach>
    </delete>

    <select id="selectSysUserAuditByUserId" parameterType="Long" resultMap="SysUserAuditResult">
        <include refid="selectSysUserAuditVo"/>
        where sua.user_id = #{userId}
    </select>
</mapper>
