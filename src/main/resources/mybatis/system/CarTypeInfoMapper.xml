<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.system.mapper.CarTypeInfoMapper">
    
    <resultMap type="CarTypeInfo" id="CarTypeInfoResult">
        <result property="carTypeId"    column="car_type_id"    />
        <result property="carTypeName"    column="car_type_name"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectCarTypeInfoVo">
        select car_type_id, car_type_name, status, create_by, create_time, update_by, update_time, remark from car_type
    </sql>

    <select id="selectCarTypeInfoList" parameterType="CarTypeInfo" resultMap="CarTypeInfoResult">
        <include refid="selectCarTypeInfoVo"/>
        <where>  
            <if test="carTypeName != null  and carTypeName != ''"> and car_type_name like concat('%', #{carTypeName}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectCarTypeInfoByCarTypeId" parameterType="Long" resultMap="CarTypeInfoResult">
        <include refid="selectCarTypeInfoVo"/>
        where car_type_id = #{carTypeId}
    </select>
        
    <insert id="insertCarTypeInfo" parameterType="CarTypeInfo">
        insert into car_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="carTypeId != null">car_type_id,</if>
            <if test="carTypeName != null and carTypeName != ''">car_type_name,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="carTypeId != null">#{carTypeId},</if>
            <if test="carTypeName != null and carTypeName != ''">#{carTypeName},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateCarTypeInfo" parameterType="CarTypeInfo">
        update car_type
        <trim prefix="SET" suffixOverrides=",">
            <if test="carTypeName != null and carTypeName != ''">car_type_name = #{carTypeName},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where car_type_id = #{carTypeId}
    </update>

    <delete id="deleteCarTypeInfoByCarTypeId" parameterType="Long">
        delete from car_type where car_type_id = #{carTypeId}
    </delete>

    <delete id="deleteCarTypeInfoByCarTypeIds" parameterType="String">
        delete from car_type where car_type_id in 
        <foreach item="carTypeId" collection="array" open="(" separator="," close=")">
            #{carTypeId}
        </foreach>
    </delete>
</mapper>